<idea-plugin>
    <id>com.github.daidodo.format-imports</id>
    <name>JS/TS Import/Export Sorter</name>
    <vendor>daidodo</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="services.MyApplicationService"/>
        <projectService serviceImplementation="services.MyProjectService"/>
    </extensions>

    <applicationListeners>
        <listener class="listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>
</idea-plugin>
